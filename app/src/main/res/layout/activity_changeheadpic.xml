<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    >
    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change your Avatar"
        android:textSize="30sp"
        android:textColor="@color/yellow_back1"
        android:layout_marginBottom="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/yellow_back1"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/et_add_msg_message"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/login"
        android:textSize="15dp"
        android:textColor="@color/purple_700"
        android:layout_marginBottom="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_add_msg_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginRight="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            >
            <Button
                android:id="@+id/bt_add_msg_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select From Album"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/login_bt"
                android:layout_marginBottom="10dp"
                />
            <Button
                android:id="@+id/bt_add_msg_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Take Your Photo"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/login_bt"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bt_add_msg_send"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@drawable/login_bt"
        android:text="Send"
        android:textColor="@color/white"
        />
</LinearLayout>