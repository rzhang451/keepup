<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_message"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
      <ImageView
          android:id="@+id/iv_media_avatar"
          android:layout_width="60dp"
          android:layout_height="60dp"
          />
      <TextView
          android:id="@+id/tv_media_name"
          android:layout_height="30dp"
          android:layout_width="wrap_content"
          android:layout_toRightOf="@id/iv_media_avatar"
          android:textColor="@color/purple_700"
          android:textSize="20dp"
          android:layout_marginBottom="5dp"
          />
      <TextView
          android:id="@+id/tv_media_date"
          android:layout_height="20dp"
          android:layout_width="wrap_content"
          android:layout_below="@id/tv_media_name"
          android:layout_toRightOf="@id/iv_media_avatar"
          android:textColor="@color/yellow_back1"
          android:textSize="10dp"
          />
   </RelativeLayout>
   <TextView
       android:id="@+id/tv_media_message"
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:textColor="@color/black"
       android:textSize="15dp"
       />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="10dp"
       >
      <ImageView
          android:id="@+id/iv_media_photo"
          android:layout_height="wrap_content"
          android:layout_width="50dp"
          />
   </LinearLayout>
   <LinearLayout
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:orientation="horizontal"
       >
      <ImageButton
          android:id="@+id/ibt_media_thumb"
          android:layout_height="30dp"
          android:layout_width="30dp"
          android:layout_marginRight="10dp"
          />
      <TextView
          android:id="@+id/tv_media_like"
          android:layout_height="30dp"
          android:layout_width="100dp"
          android:layout_marginRight="10dp"
          android:textSize="20sp"
          android:textColor="@color/purple_700"
          />

      <EditText
          android:id="@+id/et_media_comment"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@drawable/login"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          android:hint="comments here!"
          />
   </LinearLayout>

</LinearLayout>